<li class='note__card'>
  <div class="note">
    <div class="note__header">
      <div class="header__info" id=<%= dom_id(note) %>>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{note.user.nickname}", class: 'avatar' %>
        <p><%= note.title %></p>
      </div>
      <div class="header__actions">
        <small><%= time_ago_in_words(note.created_at) %></small>
        <span>
          <%= icon('fas', 'ellipsis-v') %>
        </span>
      </div>
    </div>
    <div class="note__content">
      <%= note.rich_body %>
    </div>
  </div>
</li>
