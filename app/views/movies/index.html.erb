<div class='container'>
  <div class='row'></div>
  <div class='row justify-content-center'>
    <% @movies.each do |movie| %>
      <div class="col-12 col-sm-6 my-3">
        <div class="movie_card" id="bright">
          <div class="info_section">
            <div class="movie_header">
              <%= image_tag movie.poster_url, class: 'locandina' %>
              <h1><%= movie.title %></h1>
              <h4><%= movie.release_date.year %>, DIRECTOR</h4>
              <span class="minutes">117 min</span>
              <p class="type">Action, Crime, Fantasy</p>
            </div>
            <div class="movie_desc">
              <%# <p class="text"> %>
              <%#= movie.synopsis_first_sentence %>
              <%# </p> %>
            </div>
            <div class="movie_social">
              <ul>
                <%# <li><i class="material-icons">share</i></li>
                <li><i class="material-icons">î¡½</i></li>
                <li><i class="material-icons">chat_bubble</i></li> %>
                <li class="material-icons"><%= icon('fas', 'share-alt') %></li>
                <li class="material-icons"><%= icon('fas', 'heart') %></li>
                <li class="material-icons"><%= icon('fas', 'comment') %></li>
              </ul>
            </div>
          </div>
          <%= image_tag movie.backdrop_url, class: 'blur_back bright_back movie__card_image' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
